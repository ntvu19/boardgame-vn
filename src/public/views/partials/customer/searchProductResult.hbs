<!-- CATEGORY -->
<section class="category section">
    <div class="container">
        <div class="row">
            <div class="col-2 category__left">
                <h4>Kết quả tìm kiếm</h4>

            </div>
            <div class="col-10 category__right">
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-bgfamily" role="tabpanel"
                        aria-labelledby="v-pills-bgfamily-tab">
                        <div id="product-list" class="row">
                            {{#each Products}}
                            <div class="col-3 card-item">
                                <div class="card">
                                    <img src="{{photo.[0]}}" class="card-img-top" alt="">
                                    <div class="card-body">
                                        <div class="card-title-content">
                                            <h5 class="card-title">{{name}}</h5>
                                        </div>
                                        <div class="card-price">
                                            <p class="card-price-num">{{price}}</p><span> VND</span>
                                        </div>
                                    </div>
                                    <div class="card__overlay">
                                        <a href="/product/detail/{{_id}}" class="card__overlay-detail">
                                            <i class="fa fa-arrow-circle-right"></i>Xem chi tiết
                                        </a>
                                        <button class="card__overlay-cart" onclick="addToCart('{{_id}}')">
                                            <i class="fa fa-shopping-cart"></i>Cho vào giỏ
                                        </button>
                                    </div>
                                </div>
                                {{/each}}
                            </div>



                            <div class="category__right-bottom">
                                <ul id="pagination-btn" class="pagination pagination-lg" style="margin-left: 500px">
                                    {{#each pageArray}}
                                    <li class="page-item"><a class="page-link"
                                            href="/product/search/{{this}}?search={{../keyword}}">{{this}}</a></li>

                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

