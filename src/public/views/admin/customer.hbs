<!-- ADMIN -->
<section class="admin section">
    <div class="container-fluid row">
        <div class="admin__left col-xl-2">
            <button id="close-btn">
                <span class="material-icons-sharp">
                    close
                </span>
            </button>
            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <a class="nav-link" id="v-pills-home-tab" href="/admin" role="tab" aria-controls="v-pills-home"
                    aria-selected="true">
                    <span class="material-icons-sharp">
                        home
                    </span>
                    Trang chủ
                </a>
                <a class="nav-link" id="v-pills-danhmuc-tab" href="/admin/category" role="tab"
                    aria-controls="v-pills-danhmuc" aria-selected="true">
                    <span class="material-icons-sharp">
                        dashboard_customize
                    </span>
                    Danh mục sản phẩm
                </a>
                <a class="nav-link" id="v-pills-sanpham-tab" href="/admin/product" role="tab"
                    aria-controls="v-pills-sanpham" aria-selected="false">
                    <span class="material-icons-sharp">
                        category
                    </span>
                    Sản phẩm
                </a>
                <a class="nav-link" id="v-pills-donhang-tab" href="/admin/order" role="tab"
                    aria-controls="v-pills-donhang" aria-selected="false">
                    <span class="material-icons-sharp">
                        add_shopping_cart
                    </span>
                    Đơn hàng
                </a>
                <a class="nav-link" id="v-pills-doanhthu-tab" href="/admin/revenue" role="tab"
                    aria-controls="v-pills-doanhthu" aria-selected="false">
                    <span class="material-icons-sharp">
                        analytics
                    </span>
                    Doanh thu
                </a>

                <a class="nav-link active" id="v-pills-customer-tab" href="/admin/customer/1" role="tab"
                    aria-controls="v-pills-customer" aria-selected="false">
                    <span class="material-icons-sharp">
                        perm_contact_calendar
                    </span>
                    Danh sách khách hàng
                </a>
                <a class="nav-link" id="v-pills-admin-tab" href="/admin/admin" role="tab" aria-controls="v-pills-admin"
                    aria-selected="false">
                    <span class="material-icons-sharp">
                        admin_panel_settings
                    </span>
                    Danh sách admin
                </a>
                <a class="nav-link" id="v-pills-bug-tab" href="/admin/feedback" role="tab" aria-controls="v-pills-bug"
                    aria-selected="false">
                    <span class="material-icons-sharp">
                        help_center
                    </span>
                    Phản hồi
                </a>
            </div>
        </div>
        <div class="admin__right col-12 col-xl-10">
            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="v-pills-customer" role="tabpanel"
                    aria-labelledby="v-pills-customers-tab">
                    <h1>Danh sách khách hàng</h1>
                    <form action="/admin/user/search/1" class="search-customers">
                        <i class="fas fa-search"></i>
                        <input type="search" name="term" placeholder="Tìm khách hàng">
                        <input type="submit" value="" hidden>
                    </form>

                    <div class="category__right-top">
                        <p>Sắp xếp</p>
                        <select name="" id="sort" onchange=getUserList(0)>
                            <option value="" id="">None</option>
                            <option value="name" id="name">Tên</option>
                            <option value="email" id="email">Email</option>
                            <option value="registration" id="registration">Registration tim</option>
                        </select>
                    </div>

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Tên khách hàng</th>
                                <th scope="col">Username</th>
                                <th scope="col">Email</th>
                                <th scope="col">Địa chỉ</th>
                                <th scope="col">Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody id="user-list">
                            {{!-- {{#each Users}}
                            <tr>

                                <td style="text-align: center;">{{fullName}}</td>
                                <td>{{username}}</td>
                                <td>{{email}}</td>
                                <td>{{address}}</td>
                                {{#if blocked}}
                                <td>
                                    <a href="/admin/block-user/{{_id}}?block=false"
                                        class="btn btn-secondary">Disable</a>
                                </td>
                                {{else}}
                                <td>
                                    <a href="/admin/block-user/{{_id}}?block=true" class="btn btn-primary">Active</a>
                                </td>
                                {{/if}}

                            </tr>
                            {{/each}} --}}
                        </tbody>
                    </table>

                    <nav aria-label="Page navigation example ">
                        <ul id="pagination-btn" class="pagination justify-content-end">
                            {{!-- {{#each pageArray}}
                            <li class="page-item"><a class="page-link" href="/admin/customer/{{this}}">{{this}}</a></li>
                            {{/each}} --}}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>


<script src="/js/admin/userPagination.js"></script>